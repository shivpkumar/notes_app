<h2>Make Yo Changes</h2>

<form action="/update/<%= @note.id %>" method="POST">
  <ul>
    <li><label>Title:</label><input type="text" name="note[title]" value="<%= "#{@note.title}" %>"></li>
    <li><label>Content:</label><textarea rows="2" cols="35" name="note[content]"><%= "#{@note.content}" %></textarea></li>
    <li><input type="submit" value="Update Note">
  </ul>
</form>
